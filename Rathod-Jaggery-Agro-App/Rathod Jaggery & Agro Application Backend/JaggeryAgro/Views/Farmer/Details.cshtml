@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer
@model JaggeryAgro.Core.Entities.Farmer

@{
    ViewData["Title"] = Localizer["FarmerDetailsTitle"];
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-person-fill me-2"></i> @ViewData["Title"]
                    </h4>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> @Localizer["BackToList"]
                    </a>
                </div>

                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">@Localizer["FarmerName"]</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["FarmerMobile"]</dt>
                        <dd class="col-sm-8">@Model.Mobile</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["FarmerAddress"]</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["FarmerVillage"]</dt>
                        <dd class="col-sm-8">@Model.Village</dd>
                    </dl>

                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 me-2">
                            <i class="bi bi-pencil-square me-1"></i> @Localizer["Edit"]
                        </a>
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left-circle me-1"></i> @Localizer["BackToList"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
