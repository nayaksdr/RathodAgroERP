@using JaggeryAgro.Core.Entities
@model Farmer
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EditFarmerTitle"];
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i> @Localizer["EditFarmerTitle"]
                    </h4>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> @Localizer["Back"]
                    </a>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post" class="row g-3 needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />

                        <div class="col-12">
                            <label asp-for="Name" class="form-label fw-bold">@Localizer["FarmerName"]</label>
                            <input asp-for="Name" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Mobile" class="form-label fw-bold">@Localizer["FarmerMobile"]</label>
                            <input asp-for="Mobile" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Address" class="form-label fw-bold">@Localizer["FarmerAddress"]</label>
                            <textarea asp-for="Address" class="form-control" rows="3" autocomplete="off"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Village" class="form-label fw-bold">@Localizer["FarmerVillage"]</label>
                            <input asp-for="Village" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Village" class="text-danger"></span>
                        </div>

                        <div class="col-12 text-end mt-3">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-1"></i> @Localizer["SaveChanges"]
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                                <i class="bi bi-x-circle me-1"></i> @Localizer["Cancel"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
