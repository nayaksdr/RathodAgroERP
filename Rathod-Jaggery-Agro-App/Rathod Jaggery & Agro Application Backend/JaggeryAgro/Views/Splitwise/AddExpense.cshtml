@using JaggeryAgro.Core.Entities
@model Expense
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<div class="container my-5">

    <!-- Page Header -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-white bg-primary d-inline-block px-4 py-2 rounded-3 shadow-sm">
            <i class="bi bi-plus-circle me-2"></i> @Localizer["AddExpenseTitle"]
        </h2>
    </div>

    <!-- Form Card -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <form asp-action="AddExpense" method="post" enctype="multipart/form-data">

                <div class="row g-3">

                    <!-- खर्च प्रकार -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">@Localizer["ExpenseType"]</label>
                        <select asp-for="ExpenseTypeId" class="form-select" asp-items="ViewBag.ExpenseTypes">
                            <option value="">-- @Localizer["SelectExpenseType"] --</option>
                        </select>
                        <span asp-validation-for="ExpenseTypeId" class="text-danger"></span>
                    </div>

                    <!-- सदस्य -->
                    <div class="col-md-6">
                        <label asp-for="PaidById" class="form-label fw-bold">@Localizer["PaidBy"]</label>
                        <select asp-for="PaidById" asp-items="ViewBag.Members" class="form-select">
                            <option value="">-- @Localizer["SelectMember"] --</option>
                        </select>
                        <span asp-validation-for="PaidById" class="text-danger"></span>
                    </div>

                    <!-- पेमेंट पद्धत -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">@Localizer["PaymentMode"]</label>
                        <select asp-for="PaymentMode" class="form-select" id="paymentMode">
                            <option value="">-- @Localizer["SelectPaymentMode"] --</option>
                            <option value="Cash">@Localizer["Cash"]</option>
                            <option value="UPI">@Localizer["UPI"]</option>
                            <option value="Bank">@Localizer["Bank"]</option>
                        </select>
                        <span asp-validation-for="PaymentMode" class="text-danger"></span>
                    </div>

                    <!-- रक्कम -->
                    <div class="col-md-6">
                        <label asp-for="Amount" class="form-label fw-bold">@Localizer["Amount"]</label>
                        <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="@Localizer["EnterAmount"]" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <!-- इमेज अपलोड (UPI / Bank only) -->
                    <div class="col-md-12" id="imageUploadSection" style="display:none;">
                        <label class="form-label fw-bold">@Localizer["ProofImage"]</label>
                        <input type="file" asp-for="ProofImage" class="form-control" accept="image/*" id="ProofImageInput" />
                        <span asp-validation-for="ProofImage" class="text-danger"></span>

                        <img id="expenseImagePreview"
                             src="@(!string.IsNullOrEmpty(Model.ProofImage) ? Model.ProofImage : "#")"
                             alt="Image Preview"
                             class="img-thumbnail mt-2"
                             style="display:@(!string.IsNullOrEmpty(Model.ProofImage) ? "block" : "none"); max-height:200px;" />
                    </div>
                </div>

                <!-- Buttons -->
                <div class="mt-4 d-flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-success shadow-sm">
                        <i class="bi bi-check-circle me-1"></i> @Localizer["SaveExpense"]
                    </button>
                    <a asp-action="Index" class="btn btn-secondary shadow-sm">
                        <i class="bi bi-x-circle me-1"></i> @Localizer["Cancel"]
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function toggleImageUpload() {
            const paymentMode = document.getElementById("paymentMode").value;
            const imageSection = document.getElementById("imageUploadSection");
            imageSection.style.display = (paymentMode === "UPI" || paymentMode === "Bank") ? "block" : "none";
        }

        // Image preview
        document.getElementById("ProofImageInput")?.addEventListener("change", function (e) {
            const preview = document.getElementById("expenseImagePreview");
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                }
                reader.readAsDataURL(file);
            } else {
                preview.src = "#";
                preview.style.display = "none";
            }
        });

        document.getElementById("paymentMode")?.addEventListener("change", toggleImageUpload);
        document.addEventListener("DOMContentLoaded", toggleImageUpload);
    </script>
}
