@model JaggeryAgro.Core.Entities.Member
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<div class="container my-5">

    <!-- Page Header -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-white bg-success d-inline-block px-4 py-2 rounded-3 shadow-sm">
            <i class="bi bi-person-plus-fill me-2"></i> @Localizer["AddMemberTitle"]
        </h2>
    </div>

    <!-- Form Card -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <form asp-action="AddMember" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- सदस्य नाव -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">@Localizer["MemberNameLabel"]</label>
                    <input asp-for="Name" class="form-control" placeholder="@Localizer["EnterMemberName"]" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex flex-wrap gap-2 mt-3">
                    <button type="submit" class="btn btn-success shadow-sm">
                        <i class="bi bi-check-circle me-1"></i> @Localizer["Save"]
                    </button>
                    <a asp-action="Index" class="btn btn-secondary shadow-sm">
                        <i class="bi bi-arrow-left me-1"></i> @Localizer["Back"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
