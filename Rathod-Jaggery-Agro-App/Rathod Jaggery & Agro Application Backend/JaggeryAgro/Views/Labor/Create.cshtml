@using JaggeryAgro.Core.Entities
@model Labor
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Labor Registration"];
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-white px-4 py-3 d-inline-block rounded shadow-lg"
            style="background: linear-gradient(90deg, #28a745, #218838); font-size: 2rem; letter-spacing: 1px; text-shadow: 1px 1px 2px rgba(0,0,0,0.3);">
            <i class="fas fa-user-plus me-2"></i> @ViewData["Title"]
        </h2>
    </div>

    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body bg-light p-4">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <!-- Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">
                        <i class="fas fa-user me-1 text-success"></i> @Localizer["Name"]
                    </label>
                    <input asp-for="Name" class="form-control shadow-sm rounded" placeholder="@Localizer["Enter Labor Name"]" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Mobile -->
                <div class="mb-3">
                    <label asp-for="Mobile" class="form-label fw-semibold">
                        <i class="fas fa-mobile-alt me-1 text-info"></i> @Localizer["Mobile"]
                    </label>
                    <input asp-for="Mobile" class="form-control shadow-sm rounded" placeholder="@Localizer["Enter Mobile Number"]" required />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="PasswordHash" class="form-label fw-semibold">
                        <i class="fas fa-lock me-1 text-danger"></i> @Localizer["Password"]
                    </label>
                    <input asp-for="PasswordHash" type="password" class="form-control shadow-sm rounded" placeholder="@Localizer["Enter Password (e.g. 1234)"]" required />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <!-- Labor Type -->
                <div class="mb-3">
                    <label asp-for="LaborTypeId" class="form-label fw-semibold">
                        <i class="fas fa-users-cog me-1 text-primary"></i> @Localizer["Labor Type"]
                    </label>
                    <select asp-for="LaborTypeId" class="form-select shadow-sm rounded" asp-items="ViewBag.LaborTypes" required>
                        <option value="">-- @Localizer["Select Labor Type"] --</option>
                    </select>
                    <span asp-validation-for="LaborTypeId" class="text-danger"></span>
                </div>

                <!-- Role -->
                <div class="mb-3">
                    <label asp-for="Role" class="form-label fw-semibold">
                        <i class="fas fa-briefcase me-1 text-warning"></i> @Localizer["Role"]
                    </label>
                    <input asp-for="Role" class="form-control shadow-sm rounded" value="Labor" readonly />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <!-- Join Date -->
                <div class="mb-4">
                    <label asp-for="JoinDate" class="form-label fw-semibold">
                        <i class="fas fa-calendar-alt me-1 text-info"></i> @Localizer["Join Date"]
                    </label>
                    <input asp-for="JoinDate" type="date" class="form-control shadow-sm rounded" required />
                    <span asp-validation-for="JoinDate" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex flex-wrap gap-3 justify-content-end">
                    <button type="submit" class="btn btn-success fw-bold px-4 shadow-sm rounded-pill">
                        <i class="fas fa-check-circle me-2"></i> @Localizer["Save"]
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary fw-bold px-4 shadow-sm rounded-pill">
                        <i class="fas fa-times-circle me-2"></i> @Localizer["Cancel"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
