@using JaggeryAgro.Core.Entities
@model Labor
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="container mt-5">

    <!-- Page Header -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-white px-4 py-3 d-inline-block rounded shadow-lg"
            style="background: linear-gradient(90deg, #343a40, #495057);
                   font-size: 2rem;
                   letter-spacing: 1px;
                   text-shadow: 1px 1px 2px rgba(0,0,0,0.3);">
            <i class="fas fa-user-tie me-2"></i> @Localizer["Title"]
        </h2>
    </div>

    <!-- Labor Details Card -->
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body bg-light p-4">

            <div class="row mb-3">
                <div class="col-md-3 fw-bold text-secondary">@Localizer["Name"]</div>
                <div class="col-md-9">@Model.Name</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 fw-bold text-secondary">@Localizer["LaborType"]</div>
                <div class="col-md-9">@Model.LaborType?.LaborTypeName</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 fw-bold text-secondary">@Localizer["Mobile"]</div>
                <div class="col-md-9">@Model.Mobile</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 fw-bold text-secondary">@Localizer["Role"]</div>
                <div class="col-md-9">@Model.Role</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 fw-bold text-secondary">@Localizer["JoinDate"]</div>
                <div class="col-md-9">@Model.JoinDate.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 fw-bold text-secondary">@Localizer["Status"]</div>
                <div class="col-md-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success px-3 py-2">@Localizer["Active"]</span>
                    }
                    else
                    {
                        <span class="badge bg-danger px-3 py-2">@Localizer["Inactive"]</span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 fw-bold text-secondary">@Localizer["Password"]</div>
                <div class="col-md-9">
                    <span class="text-muted">••••••</span>
                    <button type="button" class="btn btn-sm btn-outline-info ms-2" id="togglePassword">
                        <i class="fas fa-eye"></i>
                    </button>
                    <span id="plainPassword" class="d-none">@Model.PasswordHash</span>
                </div>
            </div>

        </div>

        <!-- Footer Buttons -->
        <div class="card-footer bg-white d-flex justify-content-end border-0">
            <a asp-action="Index" class="btn btn-outline-secondary fw-bold shadow-sm rounded-pill">
                <i class="fas fa-arrow-left me-2"></i> @Localizer["Back"]
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle password visibility
        document.getElementById("togglePassword").addEventListener("click", function () {
            const plainPwd = document.getElementById("plainPassword");
            if (plainPwd.classList.contains("d-none")) {
                plainPwd.classList.remove("d-none");
                this.innerHTML = '<i class="fas fa-eye-slash"></i>';
            } else {
                plainPwd.classList.add("d-none");
                this.innerHTML = '<i class="fas fa-eye"></i>';
            }
        });
    </script>
}
