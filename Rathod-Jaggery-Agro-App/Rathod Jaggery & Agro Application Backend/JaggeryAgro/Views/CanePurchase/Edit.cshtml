@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model JaggeryAgro.Core.Entities.CanePurchase
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i> @Localizer["HeaderTitle"]
            </h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle me-1"></i> @Localizer["BackButton"]
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="FarmerId" class="form-label fw-bold">@Localizer["FarmerLabel"]</label>
                    <select asp-for="FarmerId" class="form-select" asp-items="ViewBag.Farmers"></select>
                    <span asp-validation-for="FarmerId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">@Localizer["LaborLabel"]</label>
                    <select asp-for="LaborId" class="form-select" asp-items="@(ViewBag.Labors as List<SelectListItem>)">
                        <option value="">-- @Localizer["LaborLabel"] --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="PurchaseDate" class="form-label fw-bold">@Localizer["PurchaseDateLabel"]</label>
                    <input asp-for="PurchaseDate" class="form-control" type="date" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="QuantityTon" class="form-label fw-bold">@Localizer["QuantityTonLabel"]</label>
                    <input asp-for="QuantityTon" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="QuantityTon" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RatePerTon" class="form-label fw-bold">@Localizer["RatePerTonLabel"]</label>
                    <input asp-for="RatePerTon" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="RatePerTon" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PaymentStatus" class="form-label fw-bold">@Localizer["PaymentStatusLabel"]</label>
                    <select asp-for="PaymentStatus" class="form-select">
                        <option value="Pending">@Localizer["PaymentPending"]</option>
                        <option value="Paid">@Localizer["PaymentPaid"]</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">@Localizer["CaneWeightImageLabel"]</label>
                    <input type="file" name="CaneWeightImagePath" class="form-control" accept="image/*" onchange="previewCaneImage(event)" />
                    <span class="text-muted">@Localizer["ImageNote"]</span>
                </div>

                <div class="mb-3 text-center">
                    <img id="caneImagePreview"
                         src="@(string.IsNullOrEmpty(Model.CaneWeightImagePath) ? "#" : Model.CaneWeightImagePath)"
                         alt="Image Preview"
                         class="img-thumbnail"
                         style="max-height:200px; @(string.IsNullOrEmpty(Model.CaneWeightImagePath) ? "display:none;" : "")" />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle me-2"></i> @Localizer["SaveButton"]
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-x-circle me-2"></i> @Localizer["CancelButton"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function previewCaneImage(event) {
            var input = event.target;
            var preview = document.getElementById('caneImagePreview');

            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(input.files[0]);
            } else {
                preview.src = "#";
                preview.style.display = 'none';
            }
        }
    </script>
}
