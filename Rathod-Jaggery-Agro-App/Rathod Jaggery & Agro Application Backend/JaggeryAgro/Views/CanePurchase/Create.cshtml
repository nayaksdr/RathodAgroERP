@using Microsoft.AspNetCore.Mvc.Localization
@model JaggeryAgro.Core.Entities.CanePurchase
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-success text-white d-flex align-items-center rounded-top-4">
                    <i class="fa-solid fa-sack-dollar me-2"></i>
                    <h5 class="mb-0">@Localizer["HeaderTitle"]</h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation">
                        @Html.AntiForgeryToken()

                        <!-- Farmer -->
                        <div class="mb-3">
                            <label asp-for="FarmerId" class="form-label fw-bold">@Localizer["FarmerLabel"]</label>
                            <select asp-for="FarmerId" class="form-select" asp-items="ViewBag.Farmers">
                                <option value="">-- @Localizer["SelectFarmerPlaceholder"] --</option>
                            </select>
                            <span asp-validation-for="FarmerId" class="text-danger"></span>
                        </div>

                        <!-- Labor -->
                        <div class="mb-3">
                            <label asp-for="LaborId" class="form-label fw-bold">@Localizer["LaborLabel"]</label>
                            <select asp-for="LaborId" class="form-select" asp-items="@(ViewBag.Labors as List<SelectListItem>)">
                                <option value="">-- @Localizer["SelectLaborPlaceholder"] --</option>
                            </select>
                            <span asp-validation-for="LaborId" class="text-danger"></span>
                        </div>

                        <!-- Purchase Date -->
                        <div class="mb-3">
                            <label asp-for="PurchaseDate" class="form-label fw-bold">@Localizer["PurchaseDateLabel"]</label>
                            <input asp-for="PurchaseDate" type="date" class="form-control" />
                            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                        </div>

                        <!-- Quantity -->
                        <div class="mb-3">
                            <label asp-for="QuantityTon" class="form-label fw-bold">@Localizer["QuantityLabel"]</label>
                            <input asp-for="QuantityTon" type="number" step="0.01" class="form-control" placeholder="@Localizer["QuantityPlaceholder"]" />
                            <span asp-validation-for="QuantityTon" class="text-danger"></span>
                        </div>

                        <!-- Rate -->
                        <div class="mb-3">
                            <label asp-for="RatePerTon" class="form-label fw-bold">@Localizer["RateLabel"]</label>
                            <input asp-for="RatePerTon" type="number" step="0.01" class="form-control" placeholder="@Localizer["RatePlaceholder"]" />
                            <span asp-validation-for="RatePerTon" class="text-danger"></span>
                        </div>

                        <!-- Cane Weight Image -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">@Localizer["ImageLabel"]</label>
                            <input type="file" name="CaneWeightImagePath" class="form-control" accept="image/*" onchange="previewCaneImage(event)" />
                            <small class="text-muted">@Localizer["ImageNote"]</small>
                        </div>

                        <!-- Image Preview -->
                        <div class="text-center mb-3">
                            <img id="caneImagePreview" src="#" alt="@Localizer["ImagePreviewAlt"]"
                                 class="img-thumbnail shadow-sm"
                                 style="display:none; max-height:200px; border-radius: 10px;" />
                        </div>

                        <!-- Notes -->
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-bold">@Localizer["NotesLabel"]</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="@Localizer["NotesPlaceholder"]"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                                <i class="fa-solid fa-arrow-left me-1"></i> @Localizer["BackButton"]
                            </a>
                            <button type="submit" class="btn btn-success px-4 rounded-pill">
                                <i class="fa-solid fa-check me-1"></i> @Localizer["SaveButton"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function previewCaneImage(event) {
            const input = event.target;
            const preview = document.getElementById('caneImagePreview');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(input.files[0]);
            } else {
                preview.src = '#';
                preview.style.display = 'none';
            }
        }
    </script>
}
