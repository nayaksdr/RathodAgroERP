@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<JaggeryAgro.Core.ViewModel.CanePurchaseSummaryVM>
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="container mt-4 mb-5">
    <!-- Header & Add Button -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3 mb-4">
        <div class="text-white px-4 py-3 rounded-4 shadow w-100 text-center text-md-start"
             style="background: linear-gradient(135deg, #007bff, #6610f2);">
            <h3 class="fw-bold mb-0">
                <i class="fa-solid fa-list me-2"></i> @Localizer["Title"]
            </h3>
        </div>

        <a asp-action="Create"
           class="btn btn-success btn-lg rounded-pill shadow fw-bold px-4 d-flex align-items-center gap-2">
            <i class="fa-solid fa-plus-circle fs-5"></i> @Localizer["AddNew"]
        </a>
    </div>

    <!-- Table Card -->
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-body p-3 p-md-4 bg-light">
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="CanePurchaseTable">
                    <thead class="bg-dark text-white text-center align-middle">
                        <tr>
                            <th>@Localizer["Farmer"]</th>
                            <th class="text-end">@Localizer["TotalTons"]</th>
                            <th class="text-end">@Localizer["TotalAmount"]</th>
                            <th class="text-end">@Localizer["DueAmount"]</th>
                            <th class="text-center">@Localizer["WeightSlip"]</th>
                            <th style="width: 150px;">@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr class="table-row-hover">
                                    <td>@item.FarmerName</td>
                                    <td class="text-end fw-semibold">@item.TotalTons.ToString("0.00")</td>
                                    <td class="text-end text-primary fw-bold">₹ @item.TotalAmount.ToString("N2")</td>
                                    <td class="text-end text-danger fw-bold">₹ @(item.TotalAmount - item.TotalPaid)</td>

                                    <!-- Image Preview -->
                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(item.CaneWeightImagePath))
                                        {
                                            <img src="@item.CaneWeightImagePath"
                                                 class="img-thumbnail cane-image-thumb shadow-sm border-0"
                                                 style="max-height:60px; cursor:pointer; border-radius:10px;"
                                                 data-bs-toggle="modal" data-bs-target="#imageModal"
                                                 data-img="@item.CaneWeightImagePath" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>

                                    <!-- Actions -->
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm flex-wrap" role="group">
                                            <a asp-controller="CanePurchase" asp-action="Details" asp-route-id="@item.FarmerId"
                                               class="btn btn-info text-white shadow-sm mb-1" title="@Localizer["View"]">
                                                <i class="fa-solid fa-eye"></i>
                                            </a>


                                            <a asp-controller="CanePurchase" asp-action="FarmerReport" asp-route-farmerId="@item.FarmerId"
                                               class="btn btn-primary text-white shadow-sm mb-1" title="@Localizer["Report"]">
                                                <i class="fa-solid fa-chart-column"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="fa-solid fa-folder-open me-2"></i> @Localizer["NoRecords"]
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Floating Add Button (for mobile) -->
<a asp-action="Create"
   class="btn btn-success rounded-circle shadow-lg position-fixed d-md-none"
   style="bottom: 20px; right: 20px; width: 60px; height: 60px; display:flex; align-items:center; justify-content:center; z-index:1050;">
    <i class="fa-solid fa-plus fs-4"></i>
</a>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-body p-0">
                <img id="modalImage" src="" class="img-fluid w-100 rounded-top" />
            </div>
            <div class="modal-footer bg-light border-top">
                <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">
                    <i class="fa-solid fa-xmark me-1"></i> @Localizer["Close"]
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#CanePurchaseTable').DataTable({
                responsive: true,
                paging: true,
                searching: true,
                ordering: true,
                pageLength: 5,
                language: {
                    emptyTable: "@Localizer["NoRecords"]",
                    search: "@Localizer["Search"]",
                    lengthMenu: "@Localizer["DisplayRecords"]",
                    info: "@Localizer["ShowingInfo"]"
                }
            });

            // Image modal logic
            $('.cane-image-thumb').on('click', function () {
                var imgSrc = $(this).data('img');
                $('#modalImage').attr('src', imgSrc);
            });

            // Row highlight on hover
            $('.table-row-hover').hover(
                function () { $(this).addClass('table-primary shadow-sm'); },
                function () { $(this).removeClass('table-primary shadow-sm'); }
            );
        });
    </script>
}
