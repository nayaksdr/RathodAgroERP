@using JaggeryAgro.Core.Entities
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Deposit

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container mt-4">
    <h2 class="text-danger fw-bold">
        <i class="bi bi-trash3"></i> @Localizer["Header"]
    </h2>

    <div class="alert alert-danger mt-3">
        @Localizer["ConfirmationMessage"]
    </div>

    <dl class="row">
        <dt class="col-sm-3">@Localizer["Labor"]</dt>
        <dd class="col-sm-9">@Model.Labor</dd>

        <dt class="col-sm-3">@Localizer["LaborId"]</dt>
        <dd class="col-sm-9">@Model.LaborId</dd>

        <dt class="col-sm-3">@Localizer["Amount"]</dt>
        <dd class="col-sm-9">₹@Model.Amount</dd>

        <dt class="col-sm-3">@Localizer["DepositDate"]</dt>
        <dd class="col-sm-9">@Model.DepositDate.ToShortDateString()</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger px-4 shadow-sm rounded-pill">
            <i class="bi bi-trash"></i> @Localizer["Delete"]
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4 shadow-sm rounded-pill">
            <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
        </a>
    </form>
</div>
