@using JaggeryAgro.Core.Entities
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Deposit

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container mt-4">
    <h2 class="fw-bold text-success">
        <i class="bi bi-plus-circle"></i> @Localizer["Header"]
    </h2>

    <form asp-action="Create" method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="Labor" class="form-label">@Localizer["Labor"]</label>
            <input asp-for="Labor" class="form-control" placeholder="@Localizer["LaborPlaceholder"]" />
            <span asp-validation-for="Labor" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LaborId" class="form-label">@Localizer["LaborId"]</label>
            <input asp-for="LaborId" class="form-control" placeholder="@Localizer["LaborIdPlaceholder"]" />
            <span asp-validation-for="LaborId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label">@Localizer["Amount"]</label>
            <input asp-for="Amount" class="form-control" placeholder="@Localizer["AmountPlaceholder"]" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DepositDate" class="form-label">@Localizer["DepositDate"]</label>
            <input asp-for="DepositDate" type="date" class="form-control" />
            <span asp-validation-for="DepositDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success px-4 rounded-pill shadow-sm">
            <i class="bi bi-save"></i> @Localizer["Save"]
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4 rounded-pill shadow-sm">
            <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
        </a>
    </form>
</div>
