@using JaggeryAgro.Core.Entities
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Deposit

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container mt-4">
    <h2>@Localizer["Header"]</h2>

    <form asp-action="Edit" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Labor" class="form-label">@Localizer["Labor"]</label>
            <input asp-for="Labor" class="form-control" />
            <span asp-validation-for="Labor" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LaborId" class="form-label">@Localizer["LaborId"]</label>
            <input asp-for="LaborId" class="form-control" />
            <span asp-validation-for="LaborId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label">@Localizer["Amount"]</label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DepositDate" class="form-label">@Localizer["DepositDate"]</label>
            <input asp-for="DepositDate" type="date" class="form-control" />
            <span asp-validation-for="DepositDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> @Localizer["Update"]
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> @Localizer["Back"]
        </a>
    </form>
</div>
