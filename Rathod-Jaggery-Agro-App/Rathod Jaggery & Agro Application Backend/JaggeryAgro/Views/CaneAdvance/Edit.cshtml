@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model JaggeryAgro.Core.Entities.CaneAdvance

@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="container mt-4">
    <div class="text-center my-4">
        <h2 class="form-header text-warning">@Localizer["Title"]</h2>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data"
          class="card shadow-lg rounded-4 p-4 needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <!-- 🟢 Preserve existing proof image path -->
        <input type="hidden" asp-for="ProofImage" />

        <div class="mb-3">
            <label asp-for="FarmerId" class="form-label fw-bold">@Localizer["Label_Farmer"]</label>
            <select asp-for="FarmerId" class="form-select shadow-sm" asp-items="ViewBag.Farmers">
                <option value="">@Localizer["Option_SelectFarmer"]</option>
            </select>
            <span asp-validation-for="FarmerId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AdvanceDate" class="form-label fw-bold">@Localizer["Label_Date"]</label>
            <input asp-for="AdvanceDate" type="date" class="form-control shadow-sm" />
            <span asp-validation-for="AdvanceDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MemberId" class="form-label fw-bold">@Localizer["Column_Member"]</label>
            <select asp-for="MemberId" class="form-select shadow-sm" asp-items="ViewBag.Members">
                <option value="">@Localizer["Placeholder_SelectMember"]</option>
            </select>
            <span asp-validation-for="MemberId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label fw-bold">@Localizer["Label_Amount"]</label>
            <input asp-for="Amount" type="number" step="0.01" class="form-control shadow-sm" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">@Localizer["PaymentMode"]</label>
            <select asp-for="PaymentMode" class="form-select" id="paymentMode">
                <option value="">-- @Localizer["SelectPaymentMode"] --</option>
                <option value="Cash">@Localizer["Cash"]</option>
                <option value="UPI">@Localizer["UPI"]</option>
                <option value="Bank">@Localizer["Bank"]</option>
            </select>
            <span asp-validation-for="PaymentMode" class="text-danger"></span>
        </div>

        <!-- 🟢 File upload section -->
        <div class="col-md-12" id="imageUploadSection" style="display:none;">
            <label class="form-label fw-bold">@Localizer["ProofImage"]</label>
            <input type="file" name="ProofImage" class="form-control" accept="image/*" id="ProofImageInput" />
            <span asp-validation-for="ProofImage" class="text-danger"></span>

            <img id="expenseImagePreview"
                 src="@(!string.IsNullOrEmpty(Model.ProofImage) ? Model.ProofImage : "#")"
                 alt="Image Preview"
                 class="img-thumbnail mt-2"
                 style="display:@(!string.IsNullOrEmpty(Model.ProofImage) ? "block" : "none"); max-height:200px;" />
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">@Localizer["Label_Remarks"]</label>
            <input asp-for="Remarks" class="form-control shadow-sm" placeholder="@Localizer["Placeholder_Remarks"]" />
        </div>

        <div class="d-flex flex-wrap gap-2 justify-content-between mt-3">
            <button type="submit" class="btn btn-success shadow-sm hover-scale">
                <i class="fa-solid fa-floppy-disk me-2"></i> @Localizer["Button_Save"]
            </button>

            <a asp-action="Index" class="btn btn-secondary shadow-sm hover-scale">
                <i class="fa-solid fa-xmark me-2"></i> @Localizer["Button_Cancel"]
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleImageUpload() {
            const paymentMode = document.getElementById("paymentMode").value;
            const imageSection = document.getElementById("imageUploadSection");
            imageSection.style.display = (paymentMode === "UPI" || paymentMode === "Bank") ? "block" : "none";
        }

        // Image preview
        document.getElementById("ProofImageInput")?.addEventListener("change", function (e) {
            const preview = document.getElementById("expenseImagePreview");
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                }
                reader.readAsDataURL(file);
            } else {
                preview.src = "#";
                preview.style.display = "none";
            }
        });

        document.getElementById("paymentMode")?.addEventListener("change", toggleImageUpload);
        document.addEventListener("DOMContentLoaded", toggleImageUpload);
    </script>
}
