@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model JaggeryAgro.Core.Entities.CaneAdvance

@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fa-solid fa-money-bill-wave me-2"></i> @Localizer["Header_Create"]
            </h4>
            <a asp-action="Index" class="btn btn-light btn-sm shadow-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> @Localizer["Button_Back"]
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3 needs-validation" novalidate>

                <!-- Farmer -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">@Localizer["Label_Farmer"]</label>
                    <select asp-for="FarmerId" class="form-select shadow-sm"
                            asp-items="@(new SelectList(ViewBag.Farmers, "Id", "Name"))">
                        <option value="">@Localizer["Placeholder_SelectFarmer"]</option>
                    </select>
                    <span asp-validation-for="FarmerId" class="text-danger"></span>
                </div>

                <!-- Date -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">@Localizer["Label_Date"]</label>
                    <input asp-for="AdvanceDate" class="form-control shadow-sm" type="date" />
                    <span asp-validation-for="AdvanceDate" class="text-danger"></span>
                </div>

                <!-- Member -->
                <div class="col-md-6">
                    <label asp-for="MemberId" class="form-label fw-bold">@Localizer["Column_Member"]</label>
                    <select asp-for="MemberId" class="form-select shadow-sm"
                            asp-items="@(ViewBag.Members as IEnumerable<SelectListItem>)">
                        <option value="">@Localizer["Placeholder_SelectMember"]</option>
                    </select>
                    <span asp-validation-for="MemberId" class="text-danger"></span>
                </div>

                <!-- Amount -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">@Localizer["Label_Amount"]</label>
                    <input asp-for="Amount" class="form-control shadow-sm" type="number" step="0.01" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <!-- Payment Mode -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">@Localizer["PaymentMode"]</label>
                    <select asp-for="PaymentMode" class="form-select shadow-sm" id="paymentMode">
                        <option value="">-- @Localizer["SelectPaymentMode"] --</option>
                        <option value="Cash">@Localizer["Cash"]</option>
                        <option value="UPI">@Localizer["UPI"]</option>
                        <option value="Bank">@Localizer["Bank"]</option>
                    </select>
                    <span asp-validation-for="PaymentMode" class="text-danger"></span>
                </div>

                <!-- Proof Image -->
                <div class="col-md-12" id="imageUploadSection" style="display:none;">
                    <label class="form-label fw-bold">@Localizer["ProofImage"]</label>
                    <input type="file" asp-for="ProofImage" class="form-control" accept="image/*" id="ProofImageInput" />
                    <span asp-validation-for="ProofImage" class="text-danger"></span>

                    <img id="expenseImagePreview"
                         src="@(Model != null && !string.IsNullOrEmpty(Model.ProofImage) ? Model.ProofImage : "#")"
                         alt="Image Preview"
                         class="img-thumbnail mt-2"
                         style="display:@((Model != null && !string.IsNullOrEmpty(Model.ProofImage)) ? "block" : "none"); max-height:200px;" />
                </div>

                <!-- Remarks -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">@Localizer["Label_Remarks"]</label>
                    <input asp-for="Remarks" class="form-control shadow-sm" placeholder="@Localizer["Placeholder_Remarks"]" />
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="col-12 d-flex flex-wrap gap-2 justify-content-end mt-3">
                    <button type="submit" class="btn btn-success shadow-sm hover-scale px-4">
                        <i class="fa-solid fa-check me-2"></i> @Localizer["Button_Save"]
                    </button>
                    <a asp-action="Index" class="btn btn-secondary shadow-sm hover-scale px-4">
                        <i class="fa-solid fa-xmark me-2"></i> @Localizer["Button_Cancel"]
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function toggleImageUpload() {
            const paymentMode = document.getElementById("paymentMode").value;
            const imageSection = document.getElementById("imageUploadSection");
            imageSection.style.display = (paymentMode === "UPI" || paymentMode === "Bank") ? "block" : "none";
        }

        document.getElementById("ProofImageInput")?.addEventListener("change", function (e) {
            const preview = document.getElementById("expenseImagePreview");
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                };
                reader.readAsDataURL(file);
            } else {
                preview.src = "#";
                preview.style.display = "none";
            }
        });

        document.getElementById("paymentMode")?.addEventListener("change", toggleImageUpload);
        document.addEventListener("DOMContentLoaded", toggleImageUpload);
    </script>
}
