@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<JaggeryAgro.Core.Entities.ExpenseType>
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["PageTitle"];
}

<div class="container my-4">

    <!-- Header -->
    <div class="card shadow-sm border-primary rounded text-center p-3 mb-4">
        <h3 class="text-primary fw-bold mb-0"
            style="font-size: 2rem; letter-spacing: 1px; text-shadow: 1px 1px 3px rgba(0,0,0,0.2);">
            @Localizer["Header"]
        </h3>
    </div>

    <!-- Add New Button -->
    <div class="text-center mb-4">
        <a class="btn btn-success btn-lg shadow-sm fw-bold px-4" asp-action="Create">
            <i class="fas fa-plus me-2"></i> @Localizer["AddNew"]
        </a>
    </div>

    <!-- Table -->
    <div class="table-responsive shadow-sm">
        <table class="table table-bordered table-hover align-middle table-orange-header">
            <thead class="table-dark">
                <tr>
                    <th>@Localizer["SrNo"]</th>
                    <th>@Localizer["ExpenseType"]</th>
                    <th class="text-end">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Select((value, index) => new { value, index }))
                {
                    <tr>
                        <td>@(item.index + 1)</td>
                        <td>@item.value.Name</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@item.value.Id">
                                <i class="fa fa-edit"></i> @Localizer["Edit"]
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.value.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('@Localizer["ConfirmDelete"]');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash"></i> @Localizer["Delete"]
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
