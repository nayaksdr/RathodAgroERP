@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@{
    var user = Context.User.Identity;
}

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rathod Jaggery & Agro</title>
    
    <!-- Google Fonts: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* 🌐 GLOBAL FONT STYLING FOR ENTIRE APPLICATION */
        html, body {
            font-family: 'Poppins', sans-serif;
            font-weight: 400;
            color: #222;
            background-color: #f9fafb;
            letter-spacing: 0.2px;
        }

        /* 🏷️ Headings */
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            color: #111;
        }

        /* 🧾 Table Styling */
        table {
            font-family: inherit;
            font-size: 0.95rem;
        }

        /* 📦 Cards */
        .card {
            border-radius: 0.6rem;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
        }

        /* 🔘 Buttons */
        .btn {
            border-radius: 0.6rem;
            font-weight: 500;
            letter-spacing: 0.3px;
        }

        /* 🏷️ Form Labels */
        label {
            font-weight: 500;
        }

        /* 🧍 Navbar & Footer */
        .navbar, footer {
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
        }
    </style>


    <base href="~/" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Plugins -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <!-- Custom CSS -->
    <link href="~/css/navbar-premium.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/site-orange.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/dashboard.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/dealer.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/login.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/register.css" rel="stylesheet" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="bg-light text-dark">

    @if (user != null && user.IsAuthenticated)
    {
        <!-- Premium Navbar -->
        <nav class="navbar navbar-premium navbar-expand-lg navbar-light shadow-sm sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Dashboard" asp-action="Index">
                    <img src="~/images/RJ&A logo.png" alt="Rathod Jaggery Logo" class="logo" style="height:50px;" />
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Employee Registration -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="masterDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people-fill"></i> @Localizer["EmployeeRegistration"]
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="masterDropdown">
                                <li><a class="dropdown-item" asp-controller="LaborType" asp-action="Index"><i class="bi bi-list-task"></i> @Localizer["LaborType"]</a></li>
                                <li><a class="dropdown-item" asp-controller="LaborTypeRate" asp-action="Index"><i class="bi bi-cash-stack"></i> @Localizer["LaborTypeRate"]</a></li>
                                <li><a class="dropdown-item" asp-controller="Labor" asp-action="Index"><i class="bi bi-person-badge-fill"></i> @Localizer["Labor"]</a></li>
                                <li><a class="dropdown-item" asp-controller="AiAgent" asp-action="Index"> @Localizer["AiAssistant"]</a></li>
                            </ul>
                        </li>

                        <!-- Attendance -->
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Attendance" asp-action="Index">
                                <i class="bi bi-calendar-check me-1"></i> @Localizer["Attendance"]
                            </a>
                        </li>

                        <!-- Labor Payments -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="paymentDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-money-bill-wave me-1"></i> @Localizer["EmployeePayments"]
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="paymentDropdown">
                                <li><a class="dropdown-item" asp-controller="LaborPayment" asp-action="Index"><i class="fa-solid fa-file-invoice-dollar me-1"></i> @Localizer["EmployeeSalary"]</a></li>
                                <li><a class="dropdown-item" asp-controller="AdvancePayment" asp-action="Index"><i class="fa-solid fa-hand-holding-dollar me-1"></i> @Localizer["EmployeeAdvance"]</a></li>
                            </ul>
                        </li>

                        <!-- Produce Management -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="produceMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-box me-1"></i> @Localizer["ProduceManagement"]
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="produceMenu">
                                <li><a class="dropdown-item" asp-controller="Produce" asp-action="Index"><i class="fa-solid fa-box me-1"></i> @Localizer["Produce"]</a></li>
                                <li><a class="dropdown-item" asp-controller="Dealer" asp-action="Index"><i class="fa fa-handshake me-1"></i> @Localizer["Dealer"]</a></li>
                                <li><a class="dropdown-item" asp-controller="DealerAdvance" asp-action="Index"><i class="bi bi-cash-stack me-1"></i> @Localizer["DealerAdvance"]</a></li>
                                <li><a class="dropdown-item" asp-controller="JaggerySale" asp-action="Index"><i class="fa fa-shopping-cart me-1"></i> @Localizer["JaggerySale"]</a></li>
                                <li><a class="dropdown-item" asp-controller="JaggerySale" asp-action="Report"><i class="fa fa-file-alt me-1"></i> @Localizer["JaggerySaleReport"]</a></li>
                            </ul>
                        </li>

                        <!-- Cane Management -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="caneDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-tractor me-1"></i> @Localizer["CaneManagement"]
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="caneDropdown">
                                <li><a class="dropdown-item" asp-controller="Farmer" asp-action="Index"><i class="fa-solid fa-user-tie me-1"></i> @Localizer["Farmer"]</a></li>
                                <li><a class="dropdown-item" asp-controller="CanePurchase" asp-action="Index"><i class="fa-solid fa-sack-dollar me-1"></i> @Localizer["CanePurchase"]</a></li>
                                <li><a class="dropdown-item" asp-controller="CanePayment" asp-action="Index"><i class="fa fa-money-bill me-1"></i> @Localizer["CanePayment"]</a></li>
                                <li><a class="dropdown-item" asp-controller="CaneAdvance" asp-action="Index"><i class="fa fa-hand-holding-usd me-1"></i> @Localizer["CaneAdvance"]</a></li>
                            </ul>
                        </li>

                        <!-- Shared Expenses -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="SplitwiseDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-money-bill-wave me-1"></i> @Localizer["SharedExpenses"]
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="SplitwiseDropdown">
                                <li><a class="dropdown-item" asp-controller="ExpenseType" asp-action="Index"><i class="fa-solid fa-file-invoice-dollar me-1"></i> @Localizer["ExpenseTypeMaster"]</a></li>
                                <li><a class="dropdown-item" asp-controller="Splitwise" asp-action="Index"><i class="fa-solid fa-hand-holding-dollar me-1"></i> @Localizer["SplitwiseExpense"]</a></li>
                                <li><a class="dropdown-item" asp-controller="JaggerySaleShare" asp-action="Index"><i class="fa-solid fa-hand-holding-dollar me-1"></i> @Localizer["JaggerySaleShare"]</a></li>
                            </ul>
                        </li>

                    </ul>

                    <!-- User & Logout -->
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 d-flex align-items-center">
                        <li class="nav-item d-flex align-items-center ms-3">
                            <form asp-controller="Language" asp-action="SetLanguage" method="get" class="d-flex align-items-center mb-0">
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                                <div class="lang-toggle d-flex align-items-center">
                                    <span class="lang-label me-2">EN</span>

                                    <div class="form-check form-switch m-0">
                                        <input class="form-check-input lang-switch" type="checkbox" id="langSwitch"
                                               onchange="changeLanguage(this.checked)"
                                               @(Thread.CurrentThread.CurrentCulture.Name.StartsWith("mr") ? "checked" : "") />
                                    </div>

                                    <span class="lang-label ms-2">🇮🇳 मराठी</span>
                                </div>
                            </form>
                        </li>                       


                        <li class="nav-item me-2">
                            <span class="nav-link"> @Localizer["HelloUser", user.Name]</span>
                        </li>
                        <li class="nav-item">
                            <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-link text-danger p-0">
                                    <i class="fa-solid fa-sign-out-alt me-1"></i> @Localizer["Logout"]
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="container py-4">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="bg-success text-white pt-4 pb-2 text-center">
            <div class="container">
                <small>&copy; 2025 Rathod Jaggery & Agro. All rights reserved.</small>
                <div class="mt-4 d-flex justify-content-center flex-wrap gap-3">
                    <a href="https://www.instagram.com/sachin.nay" target="_blank" class="btn btn-outline-light rounded-circle" style="width:50px;height:50px;"><i class="fab fa-instagram"></i></a>
                    <a href="https://wa.me/919665520564" target="_blank" class="btn btn-outline-light rounded-circle" style="width:50px;height:50px;"><i class="fab fa-whatsapp"></i></a>
                    <a href="https://www.linkedin.com/in/sachin-rathod-d19952191" target="_blank" class="btn btn-outline-light rounded-circle" style="width:50px;height:50px;"><i class="fab fa-linkedin"></i></a>
                    <a href="https://facebook.com/yourpage" target="_blank" class="btn btn-outline-light rounded-circle" style="width:50px;height:50px;"><i class="fab fa-facebook"></i></a>
                </div>
                <hr class="border-light my-3">
                <div class="small">🌾 Crafted with ❤️ for Farmers & Consumers</div>
            </div>
        </footer>
    }
    else
    {
        @RenderBody()
    }

    <!-- Scripts -->

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/navbar-premium.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function changeLanguage(isMarathi) {
            const culture = isMarathi ? "mr" : "en";
            const returnUrl = window.location.pathname;
            window.location.href = `/Language/SetLanguage?culture=${culture}&uiCulture=${culture}&returnUrl=${returnUrl}`;
        }
    </script>

    <script>
        $(function () {
            var message = '@TempData["ToastMessage"]';
            var type = '@TempData["ToastType"]';
            if (message) {
                switch (type) {
                    case 'success': toastr.success(message); break;
                    case 'error': toastr.error(message); break;
                    case 'warning': toastr.warning(message); break;
                    default: toastr.info(message); break;
                }
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
