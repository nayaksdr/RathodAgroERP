@{
    ViewData["Title"] = "Edit Daily Rate";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary bg-gradient text-white text-center shadow">
                    <h3 class="mb-0 fw-bold">
                        <i class="bi bi-pencil-square me-2"></i> दैनिक दर संपादित करा
                    </h3>
                </div>

                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="rate" class="form-label">Daily Rate</label>
                            <input type="number"
                                   id="rate"
                                   name="rate"
                                   value="@ViewBag.DailyRate"
                                   step="0.01"
                                   class="form-control form-control-lg"
                                   placeholder="Enter daily rate" />
                        </div>
                        <button type="submit" class="btn btn-success bg-gradient btn-lg w-100 fw-bold shadow rounded-pill">
                            <i class="bi bi-pencil-square me-2"></i> जतन करा
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN (for pencil icon) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
