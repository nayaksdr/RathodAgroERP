@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="mb-3">
    <a class="btn btn-outline-success"
       asp-action="ExportDealerBalanceExcel"
       asp-route-dealerId="@Model.DealerId">
        <i class="bi bi-file-earmark-excel me-1"></i> @Localizer["ExportToExcel"]
    </a>

    <a class="btn btn-outline-danger"
       asp-action="ExportDealerBalancePdf"
       asp-route-dealerId="@Model.DealerId">
        <i class="bi bi-file-earmark-pdf me-1"></i> @Localizer["ExportToPdf"]
    </a>
</div>
