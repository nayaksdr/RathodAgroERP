@using Azure.Core
@model IEnumerable<JaggeryAgro.Core.ViewModels.WeeklySalaryReportVM>

@{
    ViewBag.Title = "Weekly Salary Report";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">

    <!-- Heading & Export -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-cash-stack text-success"></i> Weekly Salary Report</h2>
        <div>
            <a asp-action="ExportToExcel" class="btn btn-sm btn-success me-2">
                <i class="bi bi-file-earmark-excel"></i> Excel
            </a>
            <a asp-action="ExportToPdf" class="btn btn-sm btn-danger">
                <i class="bi bi-file-earmark-pdf"></i> PDF
            </a>
        </div>
    </div>

    <!-- 🔎 Date Filter -->
    <form asp-action="Report" method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <label for="fromDate" class="form-label">
                <i class="bi bi-calendar-event"></i> From Date
            </label>
            <input type="date" id="fromDate" name="fromDate"
                   class="form-control" value="@ViewBag.FromDate" />
        </div>
        <div class="col-md-3">
            <label for="toDate" class="form-label">
                <i class="bi bi-calendar-event-fill"></i> To Date
            </label>
            <input type="date" id="toDate" name="toDate"
                   class="form-control" value="@ViewBag.ToDate" />
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <a asp-action="Report" class="btn btn-secondary w-100">
                <i class="bi bi-arrow-clockwise"></i> Reset
            </a>
        </div>
    </form>

    <!-- Table -->
    <div class="table-responsive shadow-lg rounded">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th><i class="bi bi-person-badge"></i> Labor</th>
                    <th><i class="bi bi-people"></i> Type</th>
                    <th><i class="bi bi-calendar-check"></i> Days</th>
                    <th><i class="bi bi-cash-coin"></i> Daily Rate</th>
                    <th><i class="bi bi-wallet2"></i> Gross</th>
                    <th><i class="bi bi-arrow-down-circle text-danger"></i> Advance</th>
                    <th><i class="bi bi-cash text-success"></i> Net</th>
                    <th><i class="bi bi-check2-circle"></i> Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.LaborName</td>
                            <td>@item.LaborTypeName</td>
                            <td>@item.DaysPresent</td>
                            <td>@item.DailyRate.ToString("C")</td>
                            <td>@item.GrossSalary.ToString("C")</td>
                            <td class="text-danger fw-bold">@item.AdvanceDeducted.ToString("C")</td>
                            <td class="text-success fw-bold">@item.NetSalary.ToString("C")</td>
                            <td>
                                @if (item.Status == "Paid")
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Paid</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> Pending</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">
                            <i class="bi bi-info-circle"></i> No records found for this period.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
