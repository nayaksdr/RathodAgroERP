@model JaggeryAgro.Core.Entities.JaggerySale
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container mt-5">

    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-white py-3 px-4 rounded shadow-lg"
            style="background: linear-gradient(90deg, #28a745, #218838);
                   font-size: 2rem; letter-spacing: 1px;
                   text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
                   border: 2px solid #1e7e34;">
            <i class="fas fa-wallet me-2"></i>@Localizer["PageTitle"]
        </h1>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body bg-light">

            <!-- Sale Info -->
            <div class="mb-4">
                <label class="form-label fw-semibold">
                    <i class="fas fa-store me-1 text-success"></i> @Localizer["DealerLabel"]
                </label>
                <input class="form-control shadow-sm"
                       value="@ViewBag.Sale.Dealer.Name - ₹@ViewBag.Sale.TotalAmount:N2 (@ViewBag.Sale.SaleDate:dd/MM/yyyy)"
                       readonly />
            </div>

            <!-- Record Payment Form -->
            <form asp-action="RecordPayment" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <input type="hidden" name="saleId" value="@ViewBag.Sale.Id" />

                <div class="row g-3 mb-4">
                    <!-- From Member -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-user-check me-1 text-primary"></i> @Localizer["PayingMemberLabel"]
                        </label>
                        <select id="FromMemberId" name="fromMemberId" class="form-select shadow-sm" required>
                            <option value="">@Localizer["PayingMemberPlaceholder"]</option>
                            @foreach (var m in (IEnumerable<dynamic>)ViewBag.PayingMembers)
                            {
                                <option value="@m.Id">@m.Name</option>
                            }
                        </select>
                        <div class="invalid-feedback">@Localizer["PayingMemberValidation"]</div>
                    </div>

                    <!-- To Member -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-user-friends me-1 text-info"></i> @Localizer["ReceivingMemberLabel"]
                        </label>
                        <select id="ToMemberId" name="toMemberId" class="form-select shadow-sm" required>
                            <option value="">@Localizer["ReceivingMemberPlaceholder"]</option>
                            @foreach (var m in (IEnumerable<dynamic>)ViewBag.PendingMembers)
                            {
                                <option value="@m.Id" data-amount="@m.Amount">@m.Name - ₹@m.Amount</option>
                            }
                        </select>
                        <div class="invalid-feedback">@Localizer["ReceivingMemberValidation"]</div>
                    </div>
                </div>

                <!-- Amount & Payment Mode -->
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-money-bill-wave me-1 text-danger"></i> @Localizer["AmountLabel"]
                        </label>
                        <input id="PaymentAmount" type="number" name="amount" step="0.01" class="form-control shadow-sm" min="0" required />
                        <div class="invalid-feedback">@Localizer["AmountValidation"]</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-credit-card me-1 text-warning"></i> @Localizer["PaymentModeLabel"]
                        </label>
                        <select id="PaymentMode" name="paymentMode" class="form-select shadow-sm" required>
                            <option value="">@Localizer["PaymentModePlaceholder"]</option>
                            <option value="Cash">Cash / रोख</option>
                            <option value="Bank">Bank / बँक</option>
                            <option value="UPI">UPI</option>
                        </select>
                        <div class="invalid-feedback">@Localizer["PaymentModeValidation"]</div>
                    </div>
                </div>

                <!-- Proof Image Upload -->
                <div class="mb-4" id="ProofImageSection" style="display:none;">
                    <label class="form-label fw-semibold">
                        <i class="fas fa-file-image me-1 text-secondary"></i> @Localizer["ProofImageLabel"]
                    </label>
                    <input type="file" name="ProofImage" class="form-control shadow-sm" id="ProofImageInput" accept="image/*" />
                    <div id="ProofImagePreviewContainer" class="mt-2">
                        @if (!string.IsNullOrEmpty(Model?.ProofImage))
                        {
                            <img src="@Model.ProofImage" alt="Existing Proof" class="img-thumbnail shadow-sm" style="max-height:200px;" />
                        }
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex flex-wrap gap-3 justify-content-end">
                    <button type="submit" class="btn btn-success fw-bold px-4 shadow-sm rounded-pill">
                        <i class="fas fa-save me-2"></i> @Localizer["SaveButton"]
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary fw-bold px-4 shadow-sm rounded-pill">
                        <i class="fas fa-times me-2"></i> @Localizer["CancelButton"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap validation
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        $(document).ready(function () {

            // Auto-fill amount when ToMember selected
            $('#ToMemberId').change(function () {
                const amount = $(this).find(':selected').data('amount') || 0;
                $('#PaymentAmount').val(amount);
            });

            // Auto-select if only one pending member
            if ($('#ToMemberId option').length === 2) {
                $('#ToMemberId option:eq(1)').prop('selected', true).trigger('change');
            }

            // Show/hide proof image based on payment mode
            $('#PaymentMode').change(function () {
                const mode = $(this).val();
                if (mode === "Bank" || mode === "UPI") {
                    $('#ProofImageSection').slideDown();
                } else {
                    $('#ProofImageSection').slideUp();
                }
            });

            // Image preview
            $('#ProofImageInput').change(function (e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        let img = $('#ProofImagePreview');
                        if (img.length === 0) {
                            img = $('<img id="ProofImagePreview" class="img-thumbnail shadow-sm mt-2" style="max-height:200px;">');
                            $('#ProofImagePreviewContainer').append(img);
                        }
                        img.attr('src', e.target.result).show();
                    };
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
}
