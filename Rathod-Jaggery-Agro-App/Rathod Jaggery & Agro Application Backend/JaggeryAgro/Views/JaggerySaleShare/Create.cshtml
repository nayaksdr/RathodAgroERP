@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white rounded-top-4 d-flex align-items-center justify-content-between">
            <h4 class="mb-0 fw-bold">
                <i class="fas fa-plus-circle me-2"></i> @Localizer["PageTitle"]
            </h4>
            <a asp-action="Index" class="btn btn-light btn-sm shadow-sm">
                <i class="fas fa-arrow-left me-1"></i> @Localizer["Back"]
            </a>
        </div>

        <div class="card-body bg-light">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <!-- Select Dealer -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-store me-1 text-success"></i> @Localizer["SelectDealer"]
                        </label>
                        <select id="JaggerySaleId" name="JaggerySaleId" class="form-select shadow-sm" required>
                            <option value="">@Localizer["SelectDealerPlaceholder"]</option>
                            @foreach (var sale in ViewBag.Sales)
                            {
                                <option value="@sale.Value">@sale.Text</option>
                            }
                        </select>
                        <div class="invalid-feedback">@Localizer["SelectDealerValidation"]</div>
                    </div>

                    <!-- Paying Member -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-user-check me-1 text-primary"></i> @Localizer["PayingMember"]
                        </label>
                        <input type="text" id="PayingMemberName" class="form-control shadow-sm"
                               placeholder="@Localizer["PayingMemberPlaceholder"]" readonly />
                        <input type="hidden" id="PayingMemberId" name="PayingMemberId" />
                    </div>

                    <!-- Split Members -->
                    <div class="col-12">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-users me-1 text-info"></i> @Localizer["SplitMembers"]
                        </label>
                        <div id="SplitMembersContainer" class="border rounded-3 p-3 bg-white shadow-sm">
                            <em class="text-muted">@Localizer["SplitMembersHint"]</em>
                        </div>
                    </div>

                    <!-- Paid Amount -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-wallet me-1 text-danger"></i> @Localizer["PaidAmount"]
                        </label>
                        <input type="number" name="PaidAmount" class="form-control shadow-sm" min="0" step="0.01" required />
                        <div class="invalid-feedback">@Localizer["PaidAmountValidation"]</div>
                    </div>
                </div>

                <hr class="my-4">

                <!-- Buttons -->
                <div class="d-flex flex-wrap gap-2 justify-content-end">
                    <button type="submit" class="btn btn-success px-4 shadow-sm">
                        <i class="fas fa-save me-2"></i> @Localizer["Save"]
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="fas fa-times-circle me-2"></i> @Localizer["Cancel"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap validation
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Dynamic Fetch Logic
        $('#JaggerySaleId').change(function () {
            const saleId = $(this).val();
            const container = $('#SplitMembersContainer');
            if (!saleId) return;

            const selectedOption = $(this).find('option:selected');
            const saleAmountText = selectedOption.text();
            const amountMatch = saleAmountText.match(/₹([\d,]+\.\d{2})/);
            const amountValue = amountMatch ? amountMatch[1].replace(/,/g, '') : 0;
            $('input[name="PaidAmount"]').val(amountValue);

            $.getJSON('/JaggerySaleShare/GetPayingMemberBySale', { saleId }, function (member) {
                $('#PayingMemberName').val(member?.name ?? '');
                $('#PayingMemberId').val(member?.id ?? '');
            });

            $.getJSON('/JaggerySaleShare/GetMembersBySale', { saleId }, function (members) {
                container.empty();
                if (members.length > 0) {
                    members.forEach(m => {
                        container.append(`
                            <div class="form-check mb-1">
                                <input class="form-check-input" type="checkbox" name="SplitMemberIds" value="${m.id}" checked />
                                <label class="form-check-label">${m.name}</label>
                            </div>`);
                    });
                } else {
                    $.getJSON('/JaggerySaleShare/GetAllMembers', function (allMembers) {
                        if (!allMembers.length) {
                            container.html(`<em class="text-danger">@Localizer["NoMembersFound"]</em>`);
                            return;
                        }
                        container.append(`<strong>@Localizer["AllMembersAuto"]</strong><br>`);
                        allMembers.forEach(m => {
                            container.append(`
                                <div class="form-check mb-1">
                                    <input class="form-check-input" type="checkbox" name="SplitMemberIds" value="${m.id}" checked />
                                    <label class="form-check-label">${m.name}</label>
                                </div>`);
                        });
                    });
                }
            });
        });
    </script>
}
