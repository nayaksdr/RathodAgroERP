@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model JaggeryAgro.Core.Entities.JaggerySaleShare

@{
    ViewData["Title"] = Localizer["EditJaggerySaleShare"];
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-success">
            <i class="fas fa-hand-holding-usd me-2"></i>@ViewData["Title"]
        </h2>
        <p class="text-muted">@Localizer["UpdateSaleAndShareDetails"]</p>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white rounded-top-4">
            <h5 class="mb-0 fw-semibold"><i class="fas fa-edit me-2"></i>@Localizer["Edit"]</h5>
        </div>

        <div class="card-body bg-light">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <!-- Select Sale -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i class="fas fa-store me-1 text-success"></i>@Localizer["SelectSale"]
                    </label>
                    <select asp-for="JaggerySaleId" class="form-select shadow-sm" asp-items="ViewBag.Sales" required>
                        <option value="">-- @Localizer["SelectSale"] --</option>
                    </select>
                    <div class="invalid-feedback">@Localizer["PleaseSelectSale"]</div>
                </div>

                <!-- Paying Member -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i class="fas fa-user-check me-1 text-primary"></i>@Localizer["PayingMember"]
                    </label>
                    <input type="text" id="PayingMemberName" class="form-control shadow-sm"
                           value="@Model.Member?.Name" readonly placeholder="@Localizer["AutoSelectedMemberPlaceholder"]" />
                    <input type="hidden" id="PayingMemberId" name="PayingMemberId" value="@Model.MemberId" />
                </div>

                <!-- Split Members -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i class="fas fa-users me-1 text-info"></i>@Localizer["MembersToSplit"]
                    </label>
                    <div id="SplitMembersContainer" class="border rounded-4 p-3 bg-white shadow-sm">
                        <em class="text-muted">@Localizer["SelectSaleToViewMembers"]</em>
                    </div>
                </div>

                <!-- Amount Details -->
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-coins me-1 text-warning"></i>@Localizer["ShareAmount"]
                        </label>
                        <input asp-for="ShareAmount" class="form-control shadow-sm" min="0" step="0.01" required />
                        <div class="invalid-feedback">@Localizer["EnterShareAmount"]</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-wallet me-1 text-danger"></i>@Localizer["PaidAmount"]
                        </label>
                        <input asp-for="PaidAmount" class="form-control shadow-sm" min="0" step="0.01" required />
                        <div class="invalid-feedback">@Localizer["EnterPaidAmount"]</div>
                    </div>
                </div>

                <hr class="my-4">

                <!-- Action Buttons -->
                <div class="d-flex flex-wrap gap-2 justify-content-end">
                    <button type="submit" class="btn btn-success px-4 shadow-sm">
                        <i class="fas fa-save me-2"></i>@Localizer["Save"]
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="fas fa-arrow-left me-2"></i>@Localizer["Cancel"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap form validation
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Dynamic Fetch Logic
        $('#JaggerySaleId').change(function () {
            const saleId = $(this).val();
            const container = $('#SplitMembersContainer');
            if (!saleId) return;

            const selectedOption = $(this).find('option:selected');
            const saleAmountText = selectedOption.text();
            const amountMatch = saleAmountText.match(/₹([\d,]+\.\d{2})/);
            const amountValue = amountMatch ? amountMatch[1].replace(/,/g, '') : 0;
            $('input[name="PaidAmount"]').val(amountValue);

            $.getJSON('/JaggerySaleShare/GetPayingMemberBySale', { saleId }, function (member) {
                $('#PayingMemberName').val(member ? member.name : '');
                $('#PayingMemberId').val(member ? member.id : '');
            });

            $.getJSON('/JaggerySaleShare/GetMembersBySale', { saleId }, function (members) {
                container.empty();
                if (members.length > 0) {
                    members.forEach(m => {
                        container.append(`
                            <div class="form-check mb-1">
                                <input class="form-check-input" type="checkbox" name="SplitMemberIds" value="${m.id}" checked />
                                <label class="form-check-label">${m.name}</label>
                            </div>`);
                    });
                } else {
                    $.getJSON('/JaggerySaleShare/GetAllMembers', function (allMembers) {
                        if (!allMembers.length) {
                            container.html('<em class="text-danger">@Localizer["NoMembersFound"]</em>');
                            return;
                        }
                        container.append('<strong>@Localizer["AllMembersAutoSelected"]</strong><br>');
                        allMembers.forEach(m => {
                            container.append(`
                                <div class="form-check mb-1">
                                    <input class="form-check-input" type="checkbox" name="SplitMemberIds" value="${m.id}" checked />
                                    <label class="form-check-label">${m.name}</label>
                                </div>`);
                        });
                    });
                }
            });
        });
    </script>
}
