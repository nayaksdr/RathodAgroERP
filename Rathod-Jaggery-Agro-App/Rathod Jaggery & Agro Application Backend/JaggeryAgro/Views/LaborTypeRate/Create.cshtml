@using Microsoft.AspNetCore.Mvc.Localization
@model JaggeryAgro.Core.Entities.LaborTypeRate
@inject IViewLocalizer Localizer

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white d-flex align-items-center gap-2">
                    <i class="bi bi-cash-stack fs-4"></i>
                    <h4 class="mb-0 fw-bold">@Localizer["AddLaborRateTitle"]</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="LaborTypeId" class="form-label fw-semibold">@Localizer["LaborType"]</label>
                            <select asp-for="LaborTypeId" class="form-select shadow-sm" asp-items="ViewBag.LaborTypes" id="LaborTypeSelect">
                                <option value="">@Localizer["SelectLaborType"]</option>
                            </select>
                            <span asp-validation-for="LaborTypeId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DailyRate" class="form-label fw-semibold" id="rateLabel">@Localizer["DailyRate"]</label>
                            <input asp-for="DailyRate" class="form-control shadow-sm" id="DailyRateInput" placeholder="@Localizer["DailyRatePlaceholder"]" />
                            <small class="text-muted" id="rateHint">@Localizer["DailyRateHint"]</small>
                            <span asp-validation-for="DailyRate" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="EffectiveFrom" class="form-label fw-semibold">@Localizer["EffectiveFrom"]</label>
                            <input asp-for="EffectiveFrom" type="date" class="form-control shadow-sm" />
                            <span asp-validation-for="EffectiveFrom" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success flex-fill shadow-sm rounded-pill">
                                <i class="bi bi-check-circle me-1"></i> @Localizer["SaveButton"]
                            </button>
                            <a asp-action="Index" class="btn btn-secondary flex-fill shadow-sm rounded-pill">
                                <i class="bi bi-x-circle me-1"></i> @Localizer["CancelButton"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const laborSelect = document.getElementById("LaborTypeSelect");
        laborSelect.addEventListener("change", function () {
            const selectedText = this.options[this.selectedIndex].text;
            const label = document.getElementById("rateLabel");
            const input = document.getElementById("DailyRateInput");
            const hint = document.getElementById("rateHint");

            if (selectedText === "ऊस तोड कामगार") {
                label.textContent = "@Localizer["TonRateLabel"]";
                input.placeholder = "@Localizer["TonRatePlaceholder"]";
                hint.textContent = "@Localizer["TonRateHint"]";
            }
            else if (selectedText === "गुळ तयार करणारा कामगार") {
                label.textContent = "@Localizer["JaggeryRateLabel"]";
                input.placeholder = "@Localizer["JaggeryRatePlaceholder"]";
                hint.textContent = "@Localizer["JaggeryRateHint"]";
            }
            else {
                label.textContent = "@Localizer["DailyRate"]";
                input.placeholder = "@Localizer["DailyRatePlaceholder"]";
                hint.textContent = "@Localizer["DailyRateHint"]";
            }
        });
    </script>
}
