@model JaggeryAgro.Core.Entities.JaggeryProduce
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<div class="container mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-success text-white text-center">
            <h4 class="mb-0">🍯 @Localizer["FormHeader"]</h4>
        </div>
        <div class="card-body">
            <div class="row g-3">

                <!-- उत्पादन दिनांक -->
                <div class="col-md-4">
                    <label asp-for="ProducedDate" class="form-label fw-bold">@Localizer["ProducedDate"]</label>
                    <input asp-for="ProducedDate" type="date" class="form-control" />
                    <span asp-validation-for="ProducedDate" class="text-danger"></span>
                </div>

                <!-- बॅच क्रमांक -->
                <div class="col-md-4">
                    <label asp-for="BatchNumber" class="form-label fw-bold">@Localizer["BatchNumber"]</label>
                    <input asp-for="BatchNumber" class="form-control" placeholder="@Localizer["AutoGeneratedIfEmpty"]" />
                    <span asp-validation-for="BatchNumber" class="text-danger"></span>
                </div>

                <!-- गुणवत्ता दर्जा -->
                <div class="col-md-4">
                    <label asp-for="QualityGrade" class="form-label fw-bold">@Localizer["QualityGrade"]</label>
                    <select asp-for="QualityGrade" class="form-select">
                        <option value="">-- @Localizer["Select"] --</option>
                        <option value="A">A - @Localizer["Premium"]</option>
                        <option value="B">B - @Localizer["Standard"]</option>
                        <option value="C">C - @Localizer["Economy"]</option>
                    </select>
                    <span asp-validation-for="QualityGrade" class="text-danger"></span>
                </div>

                <!-- भेली वजन (किलो) -->
                <div class="col-md-4">
                    <label asp-for="QuantityKg" class="form-label fw-bold">@Localizer["QuantityKg"]</label>
                    <input asp-for="QuantityKg" type="number" class="form-control" id="QuantityKg" placeholder="@Localizer["EnterQuantity"]" />
                    <span asp-validation-for="QuantityKg" class="text-danger"></span>
                </div>

                <!-- भेली संख्या -->
                <div class="col-md-4">
                    <label asp-for="UnitPrice" class="form-label fw-bold">@Localizer["UnitPrice"]</label>
                    <input asp-for="UnitPrice" type="number" class="form-control" id="UnitPrice" placeholder="@Localizer["EnterUnitPrice"]" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>

                <!-- एकूण उत्पादन -->
                <div class="col-md-4">
                    <label asp-for="TotalCost" class="form-label fw-bold">@Localizer["TotalCost"]</label>
                    <input asp-for="TotalCost" type="text" class="form-control bg-light" id="TotalCost" readonly />
                    <span asp-validation-for="TotalCost" class="text-danger"></span>
                </div>

                <!-- टीप -->
                <div class="col-12">
                    <label asp-for="Notes" class="form-label fw-bold">@Localizer["Notes"]</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="@Localizer["EnterNotes"]"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function calculateTotal() {
            let qty = parseFloat(document.getElementById("QuantityKg").value) || 0;
            let unit = parseFloat(document.getElementById("UnitPrice").value) || 0;
            document.getElementById("TotalCost").value = Math.round(qty * unit);
        }

        document.getElementById("QuantityKg")?.addEventListener("input", calculateTotal);
        document.getElementById("UnitPrice")?.addEventListener("input", calculateTotal);
    </script>
}
