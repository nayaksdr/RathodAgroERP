@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model JaggeryAgro.Core.Entities.CanePayment

<div class="container mt-4">
    <h3 class="mb-4">@Localizer["Title_CreatePayment"]</h3>

    <form asp-action="CreatePayment" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">@Localizer["Label_Farmer"]</label>
            <select asp-for="FarmerId" class="form-select" asp-items="ViewBag.Farmers"></select>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label class="form-label">@Localizer["Label_TotalPurchaseAmount"]</label>
                <input asp-for="GrossAmount" class="form-control" readonly />
            </div>
            <div class="col-md-4">
                <label class="form-label">@Localizer["Label_AdvanceAmount"]</label>
                <input asp-for="AdvanceAdjusted" class="form-control" readonly />
            </div>
            <div class="col-md-4">
                <label class="form-label">@Localizer["Label_NetAmount"]</label>
                <input asp-for="NetAmount" class="form-control" />
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">@Localizer["Label_PaymentMode"]</label>
                <select asp-for="PaymentMode" class="form-select" id="paymentMode">
                    <option value="">-- @Localizer["SelectPaymentMode"] --</option>
                    <option value="Cash">@Localizer["Cash"]</option>
                    <option value="UPI">@Localizer["UPI"]</option>
                    <option value="Bank">@Localizer["Bank"]</option>
                </select>
                <span asp-validation-for="PaymentMode" class="text-danger"></span>
            </div>
           
            <div class="col-md-4">
                <label class="form-label">@Localizer["Label_Member"]</label>
                <select asp-for="MemberId" class="form-select" asp-items="ViewBag.Members"></select>
            </div>
            
            <!-- इमेज अपलोड (UPI / Bank only) -->
            <div class="col-md-12" id="imageUploadSection" style="display:none;">
                <label class="form-label fw-bold">@Localizer["Label_PaymentProof"]</label>

                <!-- ✅ FIXED name attribute -->
                <input type="file" name="PaymentProof" class="form-control" accept="image/*" id="ProofImageInput" />

                <span asp-validation-for="PaymentProofPath" class="text-danger"></span>

                <img id="expenseImagePreview"
                     src="@(!string.IsNullOrEmpty(Model.PaymentProofPath) ? Model.PaymentProofPath : "#")"
                     alt="Image Preview"
                     class="img-thumbnail mt-2"
                     style="display:@(!string.IsNullOrEmpty(Model.PaymentProofPath) ? "block" : "none"); max-height:200px;" />
            </div>

        </div>
        <button type="submit" class="btn btn-success mt-4">
            <i class="bi bi-save"></i> @Localizer["Button_SavePayment"]
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function toggleImageUpload() {
            const paymentMode = document.getElementById("paymentMode").value;
            const imageSection = document.getElementById("imageUploadSection");
            imageSection.style.display = (paymentMode === "UPI" || paymentMode === "Bank") ? "block" : "none";
        }

        // Image preview
        document.getElementById("ProofImageInput")?.addEventListener("change", function (e) {
            const preview = document.getElementById("expenseImagePreview");
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                }
                reader.readAsDataURL(file);
            } else {
                preview.src = "#";
                preview.style.display = "none";
            }
        });

        document.getElementById("paymentMode")?.addEventListener("change", toggleImageUpload);
        document.addEventListener("DOMContentLoaded", toggleImageUpload);
    </script>
}
