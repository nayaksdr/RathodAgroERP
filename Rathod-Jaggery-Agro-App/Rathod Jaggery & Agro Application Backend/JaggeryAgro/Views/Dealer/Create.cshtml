@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model JaggeryAgro.Core.Entities.Dealer

@{
    ViewBag.Title = Localizer["Title"];
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-success">
            <i class="bi bi-plus-circle me-2"></i> @Localizer["Header"]
        </h2>
    </div>

    <div class="card shadow-lg mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-bold">@Localizer["Label_Name"]</label>
                    <input asp-for="Name" class="form-control" placeholder="@Localizer["Placeholder_Name"]" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">@Localizer["Label_ContactNumber"]</label>
                    <input asp-for="ContactNumber" class="form-control" placeholder="@Localizer["Placeholder_ContactNumber"]" />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">@Localizer["Label_Address"]</label>
                    <textarea asp-for="Address" class="form-control" rows="3" placeholder="@Localizer["Placeholder_Address"]"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success px-4 shadow-sm rounded-pill">
                        <i class="bi bi-save me-2"></i> @Localizer["Button_Save"]
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4 shadow-sm rounded-pill">
                        <i class="bi bi-arrow-left me-2"></i> @Localizer["Button_Back"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
